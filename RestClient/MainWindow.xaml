<Window x:Class="RestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RestClient" Height="563" Width="619" Loaded="Window_Loaded">
    <Grid>
		<TextBox Height="23" HorizontalAlignment="Left" Margin="70,7,0,0" Name="UrlTextBox" VerticalAlignment="Top" Width="515" />
		<Label Content="Url:" Height="28" HorizontalAlignment="Left" Margin="12,7,0,0" Name="UrlLabel" VerticalAlignment="Top" />
		<Button Content="Go!" Height="23" HorizontalAlignment="Left" Margin="46,72,0,0" Name="GoButton" VerticalAlignment="Top" Width="75" Click="GoButton_Click" />
		<Label Content="Method:" Height="28" HorizontalAlignment="Left" Margin="12,36,0,0" Name="MethodLabel" VerticalAlignment="Top" />
		<ComboBox Height="23" HorizontalAlignment="Left" Margin="70,36,0,0" Name="HttpMethodBox" VerticalAlignment="Top" Width="120" SelectionChanged="HttpMethodBox_SelectionChanged" IsEditable="True" SelectedIndex="0">
			<ComboBoxItem Content="GET" />
			<ComboBoxItem Content="POST" />
			<ComboBoxItem Content="PUT" />
			<ComboBoxItem Content="DELETE" />
			<ComboBoxItem Content="PATCH" />
		</ComboBox>
	</Grid>
</Window>
